<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#ffb98d"
    android:id="@+id/ifBlock"
    android:layout_centerInParent="true"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/ifTransition"
        android:layout_weight="0.1"
        android:text="||"
        android:gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="IF"
        android:id="@+id/ifText"
        android:layout_gravity="center|left"
        android:layout_weight="0.2"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ifVariable"
            android:background="#ffffff"
            android:paddingRight="30dp"
            android:layout_gravity="center|right"
            android:singleLine="true"
            android:layout_weight="0.4"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ifOperator"
            android:background="#ffffff"
            android:paddingRight="30dp"
            android:layout_gravity="center|right"
            android:singleLine="true"
            android:layout_weight="0.2" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ifValue"
            android:background="#ffffff"
            android:paddingRight="30dp"
            android:layout_gravity="center|right"
            android:singleLine="true"
            android:layout_weight="0.4"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GOTO"
        android:id="@+id/ifGotoText"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ifGotoEditText"
        android:layout_weight="0.2"
        android:background="#ffffff" />

</LinearLayout>